
frontend http
        mode http
        bind *:80
        http-request set-header X-Forwarded-Proto http
        http-request redirect scheme https code 301 unless { ssl_fc }
        default_backend new-backend

frontend https
        mode http
        bind *:443 ssl crt /etc/ssl/private/thecynthiauche.pem
        http-request set-header X-Forwarded-Proto https
        default_backend new-backend

backend new-backend
        balance roundrobin
        server 63593-web-01 54.237.34.168:80 check
        server 63593-web-02 54.157.167.193:80 check
